getgenv().AntiStomp = true -- this is your toggle (unless you just want to stop the loop)



while wait() do
  spawn(function()
    if game.Players.LocalPlayer.Character.Humanoid.Health <= 7 and getgenv().AntiStomp == true then
        for i, v in pairs(game:GetService("Players").LocalPlayer.Character:GetChildren()) do
            if v:IsA("Part") or v:IsA("MeshPart") or v:IsA("Accessory") then
                v:Destroy() 
            end
        end
      end
  end)
end
